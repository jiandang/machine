<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyAppTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>//保证背景透明
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 窗口的背景颜色 -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash  </item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowDisablePreview">true</item>-->
    </style>
    <!--日期选择器-->
    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorPrimary">@color/dodgerblue</item>
        <item name="android:colorPrimaryDark">@color/dodgerblue</item>
        <item name="android:colorAccent">@color/dodgerblue</item>

    </style>
	<style name="menu_button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="menu_page_button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#99ffffff</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <!-- 单个菜单中的textview文本设置 -->
    <style name="aisle_text" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- 单个菜单中的edittext文本设置 -->
    <style name="aisle_edittext" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/circlebuttonstyle</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/text_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- 单个菜单中的edittext文本设置 仅登录和货道管理-->
    <style name="aisle_edittext1" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/circlebuttonstyle</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/text_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>
    <!-- 控件离屏幕两边距离-->
    <style  name="lrmargin">
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>

    <!-- 控件离屏幕两边距离-->
    <style  name="lrmarginson3">
        <item name="android:layout_marginLeft">120dp</item>
        <item name="android:layout_marginRight">120dp</item>
    </style>

    <!-- edit控件离屏幕两边距离+距离上个控件距离-->
    <style  name="lrmarginson"  parent="lrmargin">
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <!-- edit控件离屏幕两边距离+距离上个控件距离-->
    <style  name="lrmarginss"  parent="lrmargin">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--按钮 控件离屏幕两边距离+距离上个控件距离-->
    <style  name="lrmarginson1"  parent="lrmargin">
        <item name="android:layout_marginTop">80dp</item>
    </style>

    <!--距离上个控件距离-->
    <style  name="lrmarginson2" >
        <item name="android:layout_marginTop">80dp</item>
    </style>

    <!-- 菜单上方字体-->
    <style  name="menutop">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- 菜单按钮字体-->
    <style  name="menubutton">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style  name="menubutton_20">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style  name="menu_button_style">
        <item name="android:textColor">@color/limegreen</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- 单个菜单中的textview文本设置 -->
    <style name="error" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <!-- mofang -->
    <style name="aisle_text_mana" >
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- aaaa -->

    <style name="aisle_txt_manag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_dialog_title</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="aisle_linear_manag">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="aisle_edit_manag">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color_dialog</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/circlebuttonstyle</item>
    </style>

    <!-- aaaa -->

    <style name="Dialog_bocop">
        <item name="android:windowBackground">@color/bocop_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->

    </style>

    <style name="out_put_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:lines">1</item>
        <item name="android:alpha">255</item>
        <item name="android:hint">请输入取货密码</item>
        <item name="android:maxLength">9</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:background">#50ffffff</item>
    </style>
    <style name="input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">70sp</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#50ffffff</item>
    </style>

    <style name="ll_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="enter">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">50sp</item>
        <item name="android:layout_margin">1px</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#50ffffff</item>
    </style>
    <!-- 单个菜单中的edittext文本设置 -->
    <style name="ui_base_aisle_edittext" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/ui_base_circlebuttonstyle</item>
        <item name="android:padding">5px</item>
        <item name="android:textColorHint">@color/ui_base_text_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">10px</item>
    </style>
    <!-- 单个菜单中的textview文本设置 -->
    <style name="ui_base_aisle_text" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ui_base_text_color_black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">right</item>
    </style>
    <!-- 菜单按钮字体-->
    <style  name="ui_base_menubutton">
        <item name="android:textColor">@color/ui_base_text_color</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!-- 菜单上方字体-->
    <style  name="ui_base_menutop">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/ui_base_text_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ui_base_Dialog_bocop">
            <item name="android:windowBackground">@color/ui_base_bocop_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <!-- 控件离屏幕两边距离-->
    <style  name="background_lrmargin">
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
    </style>

    <!-- edit控件离屏幕两边距离+距离上个控件距离-->
    <style  name="background_lrmarginson"  parent="background_lrmargin">
        <item name="android:layout_marginTop">40px</item>
    </style>

    <!-- edit控件离屏幕两边距离+距离上个控件距离-->
    <style  name="background_lrmarginss"  parent="background_lrmargin">
        <item name="android:layout_marginTop">10px</item>
    </style>

    <!--按钮 控件离屏幕两边距离+距离上个控件距离-->
    <style  name="background_lrmarginson1"  parent="background_lrmargin">
        <item name="android:layout_marginTop">80px</item>
    </style>

</resources>

