<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="280dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                android:src="@drawable/bhc" />

            <TextView
                android:id="@+id/tv_prive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:text="￥10.00"
                android:textColor="@color/red"
                android:textSize="32dp" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="01-"
                    android:textColor="#333"
                    android:textSize="28dp" />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="255ml统一冰红茶"
                    android:textColor="#333"
                    android:textSize="28dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3CB035"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_erweima"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/loading" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请使用"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <View
                    android:layout_width="30dp"
                    android:layout_height="30dp" />

                <TextView
                    android:id="@+id/tv_fangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="#fff"
                    android:textSize="36dp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/tv_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫码支付"
                    android:textColor="#fff"
                    android:textSize="30dp" />

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp" />

                <ImageButton
                    android:id="@+id/ib_return"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_zhifu_fanhui2" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>