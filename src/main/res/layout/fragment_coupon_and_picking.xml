<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F7FF"
    tools:context="com.example.myapplication.fragment.CouponPickingFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_coupon"
                    android:layout_width="650dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_btn_style_white"
                    android:hint="请输入取货码"
                    android:textColorHint="#aaa"
                    android:paddingLeft="20dp"
                    android:textColor="#333"
                    android:inputType="number"
                    android:textSize="30dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <!--第一行数字-->
                <LinearLayout
                    android:layout_width="640dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_7"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="7"
                        android:textColor="#eee"
                        android:textSize="50dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_8"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="8"
                        android:textColor="#eee"
                        android:textSize="50dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_9"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="9"
                        android:textColor="#eee"
                        android:textSize="50dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_del"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="c"
                        android:textColor="#eee"
                        android:textSize="50dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <!--第二行数字-->
                <LinearLayout
                    android:layout_width="640dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_4"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="4"
                        android:textColor="#eee"
                        android:textSize="50dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_5"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="5"
                        android:textColor="#eee"
                        android:textSize="50dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_6"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="6"
                        android:textColor="#eee"
                        android:textSize="50dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_0"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="0"
                        android:textColor="#eee"
                        android:textSize="50dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <!--第三行数字-->
                <LinearLayout
                    android:layout_width="640dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btn_1"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="1"
                        android:textColor="#eee"
                        android:textSize="50dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_2"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="2"
                        android:textColor="#eee"
                        android:textSize="50dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_3"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="3"
                        android:textColor="#eee"
                        android:textSize="50dp" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_confirm"
                        android:layout_width="130dp"
                        android:layout_height="110dp"
                        android:background="@drawable/shape_76c5f0"
                        android:text="√"
                        android:textColor="#eee"
                        android:textSize="50dp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
