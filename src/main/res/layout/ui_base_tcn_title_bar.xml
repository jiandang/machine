<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mmtitle_bg">

    <Button
        android:id="@+id/title_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:background="@drawable/ui_base_weixin_selector_btn_back"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/ui_base_back"
        android:textAllCaps="false"
        style="@style/ui_base_menubutton"/>

    <TextView
        android:id="@+id/title_bar_name"
        style="@style/ui_base_menutop"
        />

    <Button
        android:id="@+id/title_bar_exit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ui_base_weixin_selector_btn_back"
        android:padding="10dp"
        android:text="@string/ui_base_exit"
        android:textAllCaps="false"
        style="@style/ui_base_menubutton" />

</RelativeLayout>
